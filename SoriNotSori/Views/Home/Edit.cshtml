@{
    ViewBag.Title = "Редактировать книгу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SoriNotSori.Models.CareerModels
<h2>Карьер #@Model.ID</h2>
@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(model => model.ID)
        <p>
            @Html.LabelFor(model => model.Name, "Имя карьера")
            <br />
            @Html.EditorFor(model => model.Name)
        </p>
        <p>
            @Html.LabelFor(model => model.NameSub, "Имя региона")
            <br />
            @Html.EditorFor(model => model.NameSub)

        </p>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}